{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": false,
    "target": "es6",
    "allowJs": false,
    "resolveJsonModule": true,
    "outDir": "public",
    "rootDir": "src"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
